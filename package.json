{
  "name": "electron-api-ipc",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [
    "electron",
    "ipc",
    "decorators",
    "inversify",
    "ioc"
  ],
  "main": "dist/index.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "author": "Charles Jacquin <charles.jacquin@autistici.org>",
  "repository": {
    "type": "git",
    "url": "https://github.com/charjac/electron-api-ipc.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.prod.json -t codeFrame 'src/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.prod.json && typedoc src",
    "test": "mocha",
    "test:ci": "nyc mocha",
    "test:tdd": "mocha --watch --reporter dot",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "start": "rollup -c rollup.config.ts -w",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src"
    ],
    "exclude": [
      "src/lib/bootstrap.ts"
    ],
    "reporter": [
      "lcov"
    ]
  },
  "peerDependencies": {
    "electron": "^5.0.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.1.7",
    "@types/electron": "^1.6.10",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.12",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "commitizen": "^3.1.1",
    "core-js": "2",
    "coveralls": "^3.0.4",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^5.0.6",
    "electron-ipc-mock": "^0.0.3",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "prompt": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.18",
    "shelljs": "^0.8.3",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.12",
    "travis-deploy-once": "^5.0.11",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "inversify": "^5.0.1"
  }
}
