{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "theme": "minimal"
  }
}
